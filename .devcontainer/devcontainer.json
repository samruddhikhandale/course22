// For format details, see https://aka.ms/devcontainer.json.
{
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile"
    },

    "features": {
        "ghcr.io/devcontainers/features/nvidia-cuda:1": {
            "installCudnn": true
        }
    },
    "onCreateCommand": "bash ./tools/install.sh",
    "runArgs": [
        "--shm-size=16g"
    ],
    "hostRequirements": {
        "storage": "64gb"
    }
}
